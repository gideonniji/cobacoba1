{
  "version": 2,
  "builds": [
    { "src": "BlogFootball-main/**", "use": "@vercel/static" },
    { "src": "api/football.js", "use": "@vercel/node" }
  ],
  "rewrites": [
    { "source": "/api/football", "destination": "/api/football.js" },
    { "source": "/(.*)", "destination": "BlogFootball-main/$1" }
  ]
}
